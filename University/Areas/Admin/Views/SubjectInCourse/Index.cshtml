@model IEnumerable<University.Entities.SubjectInCourse>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Subject In Course</title>
    <style>
        th, td {
            border: 1px solid #333;
            padding: 5px;
            vertical-align: middle;
        }
        a {
            color: palevioletred;
        }
    </style>
</head>

<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
