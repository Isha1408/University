@model IEnumerable<University.Entities.SubjectInCourse>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@if (Session["UserId"] != null)
{
    <h4>Hello @Session["UserName"].ToString()</h4>
}

<!DOCTYPE html>
<h2>Subject In Course List</h2>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Subject In Course</title>
    <style>
        th, td {
            border: 1px solid #333;
            padding: 5px;
            vertical-align: middle;
        }

        a {
            color: palevioletred;
        }
    </style>
</head>

<body>
    <p>
        @Html.ActionLink("Create New", "CreateSubject")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Course")
            </th>
            <th>
                @Html.DisplayName("Subject")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditSubject", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteSubject", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

</body>
</html>
