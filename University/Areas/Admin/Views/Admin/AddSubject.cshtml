@model University.Entities.TeacherInSubject
@{
    ViewBag.Title = "AddSubject";
}

<h2>Assign Subject</h2>

<div class="form-group">
    @Html.LabelFor(model => model.SubjectId, "SubjectId", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @*@Html.DropDownList("SubjectId", null, htmlAttributes: new { @class = "form-control" })*@
        @Html.DropDownList("SubjectId", ViewBag.SubjectList as SelectList, "--select--", htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.SubjectId, "", new { @class = "text-danger" })
    </div>
</div>