@model IEnumerable<University.Entities.Course>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    .table {
        margin-top: 15px;
    }

    th, td {
        border: 1px solid #333;
        padding: 5px;
        vertical-align: middle;
    }

    label {
        margin-right: 10px;
    }

    .table-responsive {
        border: 1px solid #333;
    }
    a {
        color: #337ab7;
    }
</style>

<h2>Course List</h2>

@if (Session["UserId"] != null)
{
    <h4>Hello @Session["UserName"].ToString()</h4>
}

<p>
    @Html.ActionLink("Create New", "CreateCourse")
</p>
<style>
    th, td {
        border: 1px solid #333;
        padding: 5px;
        vertical-align: middle;
    }

</style>
<table class="table table-striped" cellpadding="0" cellspacing="0">
    <tr class="success">

        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditCourse", new { id = item.CourseId }) |
                @Html.ActionLink("Details", "CourseDetails", new { id = item.CourseId }) |
                @Html.ActionLink("Delete", "DeleteCourse", new { id = item.CourseId })
            </td>
        </tr>
    }

</table>
<p>

</p>
