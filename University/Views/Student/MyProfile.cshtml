@model IEnumerable<University.Entities.User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayoutPage.cshtml";
}

<h2>My Profile</h2>

@if (Session["UserId"] != null)
{
    <h4>Hello @Session["UserName"].ToString()</h4>
}

<style>
    .table {
        width: 400px;
    }

    th {
        width: 30%;
    }

    th, td {
        border: 1px solid #333;
        padding: 5px;
        vertical-align: middle;
    }
</style>
<table class="table">
    

    @foreach (var item in Model)
    {
        <tr>
            <th>
                FirstName:
            </th>

            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
        </tr>

        <tr>
            <th>
                Last Name:
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
        </tr>

        <tr>
            <th>
                Gender:
            </th>

            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
        </tr>
        <tr>
            <th>
                DOB:
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
        </tr>
        <tr>
            <th>
                Email:
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
        </tr>


        <tr>
            <th>
                Temporary Address:
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Address.AddressLine1)
            </td>
        </tr>


        <tr>
            <th>
                Permanant Address:
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Address.AddressLine2)
            </td>
        </tr>
        <tr>
            <th>
                Country:
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Address.Country.Name)
            </td>
        </tr>
        <tr>
            <th>
                State:
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Address.State.Name)
            </td>
        </tr>
        <tr>
            <th>
                City:
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Address.City.Name)
            </td>
        </tr>
        <tr>
            <th>
                ZipCode:
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Address.ZipCode)
            </td>
        </tr>
        <tr>
            <th>
                Hobbies:
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Hobbies)
            </td>
        </tr>
        <tr>
            <th>
                Course:
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.course.CourseName)
            </td>
        </tr>

        <tr>
            <td colspan="2">
                @Html.ActionLink("EditProfile", "EditUser", new { id = item.UserId }) |
                @Html.ActionLink("MySubjects", "SubjectList", new { id = item.CourseId })|
                @Html.ActionLink("ViewTeachers", "TeachersCourseList", new { id = item.CourseId })
            </td>
        </tr>

    }

</table>



